<tbody>
    {% for user in users %}
        <tr>
            <td>{{ user.id }}</td>
            <td>{{ user.nom }}</td>
            <td>{{ user.prenom }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.cin }}</td>
            <td>{{ user.role }}</td>
            <td>
                {% if user.isVerified %}
                    <span class="badge bg-success">Vérifié</span>
                {% else %}
                    <span class="badge bg-secondary">Non vérifié</span>
                {% endif %}
            </td>
            <td>
                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-link text-warning">
                    <i class="fas fa-edit"></i> Modifier
                </a>
                <a href="{{ path('app_user_delete', {'id': user.id}) }}" class="btn btn-sm btn-link text-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?')">
                    <i class="fas fa-trash"></i> Supprimer
                </a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="8" class="text-center">Aucun utilisateur trouvé.</td>
        </tr>
    {% endfor %}
</tbody>
