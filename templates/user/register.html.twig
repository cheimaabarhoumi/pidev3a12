{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h1 class="h3 mb-3 font-weight-normal text-center">Inscription</h1>
                </div>
                <div class="card-body">
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger">
                            {{ message|raw }}
                        </div>
                    {% endfor %}

                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}

                    {{ form_start(registrationForm) }}
                        {{ form_row(registrationForm.nom, {
                            'attr': {'class': 'form-control'},
                            'label_attr': {'class': 'form-label'}
                        }) }}
                        {{ form_row(registrationForm.prenom, {
                            'attr': {'class': 'form-control'},
                            'label_attr': {'class': 'form-label'}
                        }) }}
                        {{ form_row(registrationForm.email, {
                            'attr': {'class': 'form-control'},
                            'label_attr': {'class': 'form-label'}
                        }) }}
                        {{ form_row(registrationForm.cin, {
                            'attr': {'class': 'form-control'},
                            'label_attr': {'class': 'form-label'}
                        }) }}
                        {{ form_row(registrationForm.motdepasse, {
                            'attr': {'class': 'form-control'},
                            'label_attr': {'class': 'form-label'}
                        }) }}
                        {{ form_row(registrationForm.role, {
                            'attr': {'class': 'form-control'},
                            'label_attr': {'class': 'form-label'}
                        }) }}

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">S'inscrire</button>
                        </div>
                    {{ form_end(registrationForm) }}

                    <div class="text-center mt-3">
                        <p>Déjà inscrit ? <a href="{{ path('app_login') }}">Connectez-vous</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 