{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% include 'user/_navbar.html.twig' with {'css_only': true} %}
    <link href="https://fonts.googleapis.com/css?family=Inter:300,400,500,600,700,800" rel="stylesheet" />
    <link href="https://demos.creative-tim.com/soft-ui-dashboard/assets/css/nucleo-icons.css" rel="stylesheet" />
    <link href="https://demos.creative-tim.com/soft-ui-dashboard/assets/css/nucleo-svg.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
    <link id="pagestyle" href="https://demos.creative-tim.com/soft-ui-dashboard/assets/css/soft-ui-dashboard.css?v=1.1.0" rel="stylesheet" />
{% endblock %}

{% block body %}
<div class="main-content position-relative max-height-vh-100 h-100">
    {% include 'user/_navbar.html.twig' with {'css_only': false} %}
    
    <div class="container-fluid px-2 px-md-4">
        <section class="min-vh-100 mb-8">
            <div class="page-header align-items-start min-vh-50 pt-5 pb-11 m-3 border-radius-lg" style="background-image: url('https://demos.creative-tim.com/soft-ui-dashboard/assets/img/curved-images/curved14.jpg');">
                <span class="mask bg-gradient-dark opacity-6"></span>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5 text-center mx-auto">
                            <h1 class="text-white mb-2 mt-5">Bienvenue!</h1>
                            <p class="text-lead text-white">Créez votre compte pour accéder à notre plateforme.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row mt-lg-n10 mt-md-n11 mt-n10">
                    <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
                        <div class="card z-index-0">
                            <div class="card-header text-center pt-4">
                                <h5>Inscription</h5>
                            </div>
                            <div class="card-body">
                                {% for message in app.flashes('error') %}
                                    <div class="alert alert-danger">
                                        {{ message|raw }}
                                    </div>
                                {% endfor %}

                                {% for message in app.flashes('success') %}
                                    <div class="alert alert-success">
                                        {{ message }}
                                    </div>
                                {% endfor %}

                                {{ form_start(registrationForm, {'attr': {'class': 'form-horizontal'}}) }}
                                    <div class="mb-3">
                                        {{ form_row(registrationForm.nom, {
                                            'attr': {'class': 'form-control', 'placeholder': 'Nom'},
                                            'label_attr': {'class': 'form-label'}
                                        }) }}
                                    </div>
                                    <div class="mb-3">
                                        {{ form_row(registrationForm.prenom, {
                                            'attr': {'class': 'form-control', 'placeholder': 'Prénom'},
                                            'label_attr': {'class': 'form-label'}
                                        }) }}
                                    </div>
                                    <div class="mb-3">
                                        {{ form_row(registrationForm.email, {
                                            'attr': {'class': 'form-control', 'placeholder': 'Email'},
                                            'label_attr': {'class': 'form-label'}
                                        }) }}
                                    </div>
                                    <div class="mb-3">
                                        {{ form_row(registrationForm.cin, {
                                            'attr': {'class': 'form-control', 'placeholder': 'CIN'},
                                            'label_attr': {'class': 'form-label'}
                                        }) }}
                                    </div>
                                    <div class="mb-3">
                                        {{ form_row(registrationForm.motdepasse, {
                                            'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'},
                                            'label_attr': {'class': 'form-label'}
                                        }) }}
                                    </div>
                                    <div class="mb-3">
                                        {{ form_row(registrationForm.role, {
                                            'attr': {'class': 'form-control'},
                                            'label_attr': {'class': 'form-label'}
                                        }) }}
                                    </div>

                                    <div class="text-center">
                                        <button type="submit" class="btn bg-gradient-dark w-100 my-4 mb-2">S'inscrire</button>
                                    </div>
                                    <p class="text-sm mt-3 mb-0">Déjà inscrit ? <a href="{{ path('app_login') }}" class="text-dark font-weight-bolder">Connectez-vous</a></p>
                                {{ form_end(registrationForm) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://demos.creative-tim.com/soft-ui-dashboard/assets/js/core/popper.min.js"></script>
    <script src="https://demos.creative-tim.com/soft-ui-dashboard/assets/js/core/bootstrap.min.js"></script>
    <script src="https://demos.creative-tim.com/soft-ui-dashboard/assets/js/plugins/perfect-scrollbar.min.js"></script>
    <script src="https://demos.creative-tim.com/soft-ui-dashboard/assets/js/plugins/smooth-scrollbar.min.js"></script>
{% endblock %} 