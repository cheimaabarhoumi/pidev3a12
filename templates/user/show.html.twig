{% extends 'base.html.twig' %}

{% block title %}Détails de l'Utilisateur{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h1 class="h3 mb-3 font-weight-normal">Détails de l'Utilisateur</h1>
                </div>
                <div class="card-body">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>ID</th>
                                <td>{{ user.id }}</td>
                            </tr>
                            <tr>
                                <th>Nom</th>
                                <td>{{ user.nom }}</td>
                            </tr>
                            <tr>
                                <th>Prénom</th>
                                <td>{{ user.prenom }}</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>{{ user.email }}</td>
                            </tr>
                            <tr>
                                <th>CIN</th>
                                <td>{{ user.cin }}</td>
                            </tr>
                            <tr>
                                <th>Rôle</th>
                                <td>{{ user.role }}</td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="mt-3">
                        <a href="{{ path('app_users') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Retour à la liste
                        </a>
                        <a href="{{ path('app_contrat_index') }}" class="btn btn-info ms-2">
                            <i class="fas fa-file-contract"></i> Voir les contrats
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 