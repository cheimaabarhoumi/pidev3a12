{% extends 'base.html.twig' %}

{% block title %}Modifier l'Utilisateur{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h1 class="h3 mb-3 font-weight-normal">Modifier l'Utilisateur</h1>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        {{ form_row(form.nom, {
                            'attr': {'class': 'form-control'},
                            'label_attr': {'class': 'form-label'}
                        }) }}
                        {{ form_row(form.prenom, {
                            'attr': {'class': 'form-control'},
                            'label_attr': {'class': 'form-label'}
                        }) }}
                        {{ form_row(form.email, {
                            'attr': {'class': 'form-control'},
                            'label_attr': {'class': 'form-label'}
                        }) }}
                        {{ form_row(form.cin, {
                            'attr': {'class': 'form-control'},
                            'label_attr': {'class': 'form-label'}
                        }) }}
                        {{ form_row(form.motdepasse, {
                            'attr': {'class': 'form-control'},
                            'label_attr': {'class': 'form-label'},
                            'required': false
                        }) }}
                        {{ form_row(form.role, {
                            'attr': {'class': 'form-control'},
                            'label_attr': {'class': 'form-label'}
                        }) }}

                        <div class="d-grid gap-2 mt-3">
                            <button type="submit" class="btn btn-primary">Enregistrer</button>
                            <a href="{{ path('app_users') }}" class="btn btn-secondary">Annuler</a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 