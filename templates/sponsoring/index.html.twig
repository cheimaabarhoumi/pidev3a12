{% extends 'base.html.twig' %}

{% block title %}Liste des Sponsorings{% endblock %}

{% block body %}
<div class="container-fluid p-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h3 mb-0 text-gray-800">Gestion des Sponsorings</h1>
        </div>
        <div class="col text-end">
            <a href="{{ path('app_sponsoring_new') }}" class="btn btn-primary">
                <i class="fas fa-plus-circle"></i> Nouveau Sponsoring
            </a>
        </div>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="card shadow">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Liste des partenariats</h6>
            <form method="get" class="d-flex gap-2 mb-0">
                <input type="text" name="search" class="form-control" placeholder="Rechercher..." value="{{ searchTerm }}">
                <select name="etat" class="form-select" onchange="this.form.submit()">
                    <option value="">Tous les états</option>
                    <option value="Actif" {{ currentEtat == 'Actif' ? 'selected' }}>Actif</option>
                    <option value="Terminé" {{ currentEtat == 'Terminé' ? 'selected' }}>Terminé</option>
                    <option value="Annulé" {{ currentEtat == 'Annulé' ? 'selected' }}>Annulé</option>
                </select>
                {% if searchTerm or currentEtat %}
                    <a href="{{ path('app_sponsoring_index') }}" class="btn btn-secondary">
                        <i class="fas fa-times"></i>
                    </a>
                {% endif %}
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-search"></i>
                </button>
            </form>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="sponsoringTable">
                    <thead class="table-light">
                        <tr>
                            <th>{{ knp_pagination_sortable(pagination, 'ID', 's.id') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Partenaire', 's.nomPartenaire') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Montant', 's.montant') }}</th>
                            <th>Période</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Type', 's.typeSponsoring') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'État', 's.etat') }}</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for sponsoring in pagination %}
                        <tr>
                            <td>{{ sponsoring.id }}</td>
                            <td><strong>{{ sponsoring.nomPartenaire }}</strong></td>
                            <td><span class="badge bg-success">{{ sponsoring.montant }} DT</span></td>
                            <td>
                                <small>
                                    Du: {{ sponsoring.dateDebut|date('d/m/Y') }}<br>
                                    Au: {{ sponsoring.dateFin|date('d/m/Y') }}
                                </small>
                            </td>
                            <td>{{ sponsoring.typeSponsoring }}</td>
                            <td>
                                <span class="badge {% if sponsoring.etat == 'Actif' %}bg-success{% elseif sponsoring.etat == 'Terminé' %}bg-secondary{% else %}bg-danger{% endif %}">
                                    {{ sponsoring.etat }}
                                </span>
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a href="{{ path('app_sponsoring_show', {'id': sponsoring.id}) }}" class="btn btn-info btn-sm" title="Voir les détails">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_sponsoring_edit', {'id': sponsoring.id}) }}" class="btn btn-warning btn-sm" title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="{{ path('app_suivi_sponsoring_by_sponsoring', {'id': sponsoring.id}) }}" class="btn btn-primary btn-sm" title="Voir les suivis">
                                        <i class="fas fa-tasks"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center py-4">
                                <div class="text-muted">
                                    <i class="fas fa-info-circle me-2"></i>
                                    Aucun sponsoring trouvé
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}