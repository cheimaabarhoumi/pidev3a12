{% extends 'base.html.twig' %}

{% block title %}Modifier le Sponsoring{% endblock %}

{% block body %}
<div class="container-fluid p-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-edit me-2"></i>
                Modifier le sponsoring : {{ sponsoring.nomPartenaire }}
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Formulaire de modification</h6>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.nomPartenaire, 'Nom du partenaire', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.nomPartenaire, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.nomPartenaire) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.montant, 'Montant', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.montant, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.montant) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.dateDebut, 'Date de début', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.dateDebut) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.dateFin, 'Date de fin', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.dateFin, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.dateFin) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.typeSponsoring, 'Type de sponsoring', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.typeSponsoring, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.typeSponsoring) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.etat, 'État', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.etat, {'attr': {'class': 'form-select'}}) }}
                                {{ form_errors(form.etat) }}
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="{{ path('app_sponsoring_index') }}" class="btn btn-secondary me-2">
                                <i class="fas fa-times me-1"></i> Annuler
                            </a>
                            <button class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> Enregistrer
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Aide</h6>
                </div>
                <div class="card-body">
                    <p class="mb-0">
                        <i class="fas fa-info-circle me-1 text-info"></i>
                        Modifiez les informations du sponsoring dans le formulaire ci-contre.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}