{% extends '/front/accueil/accueil.html.twig' %}

{% block title %}Modifier une voiture{% endblock %}
{% block recherche %}{% endblock %}
{% block accueil_services %}{% endblock %}
{% block accueil_featured %}{% endblock %}
{% block accueil_voitures %}
<section id="edit-voiture" class="new-cars py-5">
    <div class="container">
        <div class="section-header text-center mb-5">
            <p class="text-muted">Modifier <span class="fw-bold">une</span> voiture</p>
            <h2 class="fw-bold">Modification voiture</h2>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-10" style="margin-left: 12%;"> <!-- Ajouter une marge à gauche -->
                {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                <div class="row g-4">
                    <div class="col-md-6">
                        {{ form_label(form.marque) }}
                        {{ form_widget(form.marque, {'attr': {'class': 'form-control', 'value': voiture.marque}}) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.modele) }}
                        {{ form_widget(form.modele, {'attr': {'class': 'form-control', 'value': voiture.modele}}) }}
                    </div>

                    <div class="col-md-6">
                        {{ form_label(form.annee) }}
                        {{ form_widget(form.annee, {'attr': {'class': 'form-control', 'value': voiture.annee}}) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.prix) }}
                        {{ form_widget(form.prix, {'attr': {'class': 'form-control', 'value': voiture.prix}}) }}
                    </div>

                    <div class="col-md-6">
                        {{ form_label(form.puissance_fiscale) }}
                        {{ form_widget(form.puissance_fiscale, {'attr': {'class': 'form-control', 'value': voiture.puissanceFiscale}}) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.kilometrage) }}
                        {{ form_widget(form.kilometrage, {'attr': {'class': 'form-control', 'value': voiture.kilometrage}}) }}
                    </div>

                    <div class="col-md-6">
                        {{ form_label(form.boite_vitesse) }}
                        {{ form_widget(form.boite_vitesse, {'attr': {'class': 'form-control', 'value': voiture.boiteVitesse}}) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.carburant) }}
                        {{ form_widget(form.carburant, {'attr': {'class': 'form-control', 'value': voiture.carburant}}) }}
                    </div>

                    <div class="col-md-6">
                        {{ form_label(form.cylindree) }}
                        {{ form_widget(form.cylindree, {'attr': {'class': 'form-control', 'value': voiture.cylindree}}) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.nombre_portes) }}
                        {{ form_widget(form.nombre_portes, {'attr': {'class': 'form-control', 'value': voiture.nombrePortes}}) }}
                    </div>

                    <div class="col-12 text-center"> <!-- Centrer le champ de l'image -->
                        <div class="col-6 mx-auto"> <!-- Limiter la largeur de l'image -->
                        {{ form_label(form.image) }}
                        {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    
                    <div class="col-12 text-center mt-8">
                        <button type="submit" id="submit-btn" class="btn btn-primary btn-ajouter">Modifier</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const submitBtn = document.getElementById("submit-btn");
            const form = submitBtn.closest("form");

            submitBtn.addEventListener("click", function (e) {
                // Vérifie la validité du formulaire HTML5
                if (form.checkValidity()) {
                    e.preventDefault(); // Empêche l'envoi par défaut

                    if (confirm("Voulez-vous confirmer la modification de cette voiture ?")) {
                        form.submit(); // Si confirmé → envoyer le formulaire
                    }
                    // Sinon → ne rien faire
                } else {
                    // Si des champs sont invalides, laisser le navigateur gérer les erreurs
                    form.reportValidity(); // Fait apparaître les messages d'erreur HTML5
                }
            });
        });
    </script>

</section>

<style>
    .form-control {
        border-radius: 0.5rem;
        padding: 1rem;
        box-shadow: none;
        border: 1px solid #ccc;
        width: 100%; /* Pour occuper toute la largeur disponible */
        height: 50px; /* Ajuster la hauteur du champ */
        font-size: 2rem; /* Optionnel : Ajuster la taille de la police */
    }

    .btn-ajouter {
        padding: 2rem 5rem;
        font-size: 2.0rem;
        border-radius: 1.5rem;
        margin-top: 2rem;
    }
</style>

{% endblock %}

{% block client %}{% endblock %}
