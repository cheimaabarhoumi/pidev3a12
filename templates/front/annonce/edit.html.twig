{% extends '/front/accueil/accueil.html.twig' %}

{% block title %}Modifier l'Annonce{% endblock %}

{% block recherche %}{% endblock %}
{% block accueil_services %}{% endblock %}
{% block accueil_featured %}{% endblock %}
{% block accueil_voitures %}

<section id="edit-annonce" class="new-cars py-5">
    <div class="container">

        <div class="section-header text-center mb-5">
            <p class="text-muted">Modifier <span class="fw-bold">une</span> annonce</p>
            <h2 class="fw-bold">Annonce pour la voiture {{ voiture.marque ~ ' ' ~ voiture.modele }}</h2>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-10" style="margin-left: 12%;">
                {{ form_start(form) }}
                <div class="row g-4">

                    <div class="col-md-6">
                        {{ form_label(form.titre) }}
                        {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="col-md-6">
                        {{ form_label(form.voiture) }}
                        {{ form_widget(form.voiture, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="col-12">
                        {{ form_label(form.description) }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                    </div>

                    <div class="col-12 text-center mt-8">
                        <button type="submit" id="submit-btn" class="btn btn-primary btn-ajouter">Modifier l'annonce</button>
                    </div>

                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const submitBtn = document.getElementById("submit-btn");
            const form = submitBtn.closest("form");

            submitBtn.addEventListener("click", function (e) {
                if (form.checkValidity()) {
                    e.preventDefault();
                    if (confirm("Voulez-vous modifier cette annonce ?")) {
                        form.submit();
                    }
                } else {
                    form.reportValidity();
                }
            });
        });
    </script>

    <style>
        .form-control {
            border-radius: 0.5rem;
            padding: 1rem;
            box-shadow: none;
            border: 1px solid #ccc;
            width: 100%;
            height: 50px;
            font-size: 1.2rem;
        }

        .btn-ajouter {
            padding: 1.5rem 4rem;
            font-size: 1.8rem;
            border-radius: 1.5rem;
            margin-top: 2rem;
        }
    </style>
</section>

{% endblock %}

{% block client %}{% endblock %}
