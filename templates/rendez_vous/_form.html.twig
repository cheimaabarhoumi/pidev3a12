{{ form_start(form, {
    'attr': {
        'class': 'rdv-form needs-validation',
        'novalidate': 'novalidate'
    }
}) }}
    <div class="row g-3">
        {# Champ Date - Version finale #}
        <div class="col-md-6">
            <label for="{{ form.dateRdv.vars.id }}" class="form-label fw-bold">Date du rendez-vous*</label>
            <div class="input-group" id="datetimepicker-container" data-td-target-input="nearest" data-td-target-toggle="nearest">
                {{ form_widget(form.dateRdv, {
                    'attr': {
                        'class': 'form-control datetime-input',
                        'placeholder': 'Sélectionnez une date',
                        'data-td-target': '#datetimepicker-container',
                        'autocomplete': 'off'
                    }
                }) }}
                <button class="btn btn-outline-primary" type="button" data-td-target="#datetimepicker-container" data-td-toggle="datetimepicker">
                    <i class="fas fa-calendar-alt me-1"></i> Choisir
                </button>
            </div>
            <div class="invalid-feedback d-block">
                {{ form_errors(form.dateRdv) }}
            </div>
        </div>

        {# Champ Statut #}
        <div class="col-md-6">
            <div class="form-floating">
                {{ form_widget(form.status, {
                    'attr': {
                        'class': 'form-select'
                    }
                }) }}
                {{ form_label(form.status, 'Statut*') }}
                <div class="invalid-feedback d-block">
                    {{ form_errors(form.status) }}
                </div>
            </div>
        </div>

        {# Champ Description #}
        <div class="col-12">
            <div class="form-floating">
                {{ form_widget(form.description, {
                    'attr': {
                        'class': 'form-control',
                        'style': 'height: 120px',
                        'placeholder': ' '
                    }
                }) }}
                {{ form_label(form.description, 'Description*') }}
                <div class="invalid-feedback d-block">
                    {{ form_errors(form.description) }}
                </div>
            </div>
        </div>

        {# Champ Entretien avec coût #}
        <div class="col-12">
            <div class="form-floating">
                {{ form_widget(form.entretien, {
                    'attr': {
                        'class': 'form-select',
                        'id': 'entretien-select'
                    }
                }) }}
                {{ form_label(form.entretien, "Type d'entretien*") }}
                <div class="invalid-feedback d-block">
                    {{ form_errors(form.entretien) }}
                </div>
            </div>
            <div class="mt-2">
                <span class="badge bg-primary p-2 fs-6" id="cout-entretien">
                    <!-- Le coût apparaîtra ici -->
                </span>
            </div>
        </div>

        {# Boutons #}
        <div class="col-12 mt-4">
            <button type="submit" class="btn btn-primary btn-lg w-100 py-3 shadow">
                <i class="fas fa-calendar-check me-2"></i>
                {{ button_label|default('Confirmer le rendez-vous') }}
            </button>
            <a href="{{ path('app_rendez_vous_index') }}" class="btn btn-outline-secondary mt-3 w-100">
                <i class="fas fa-arrow-left me-2"></i> Retour à la liste
            </a>
        </div>
    </div>
{{ form_end(form) }}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Initialisation Tempus Dominus
   const datePicker = new tempusDominus.TempusDominus(
    document.getElementById('datetimepicker-container'),
    {
        localization: {
            locale: 'fr',
            format: 'yyyy-MM-dd HH:mm',
            startOfTheWeek: 1
        },
        display: {
            buttons: {
                today: { display: true, text: "Aujourd'hui" },
                clear: { display: true, text: "Effacer" },
                close: { display: true, text: "Fermer" }
            }
        }
    }
);
   
  // Affichage dynamique du coût
    const entretienSelect = document.querySelector('#{{ form.entretien.vars.id }}');
    const coutDisplay = document.getElementById('cout-entretien');
    
    if (entretienSelect) {
        entretienSelect.addEventListener('change', function() {
            const selectedOption = this.options[this.selectedIndex];
            if (selectedOption.value) {
                coutDisplay.textContent = `Coût estimé : ${selectedOption.dataset.cout} €`;
            } else {
                coutDisplay.textContent = '';
            }
        });
    }

    // Validation
    const form = document.querySelector('.needs-validation');
    form.addEventListener('submit', function(event) {
        if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
        }
        form.classList.add('was-validated');
    });
});
</script>
{% endblock %}