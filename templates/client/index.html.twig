{% extends 'base.html.twig' %}

{% block title %}Client Index{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Client List</h3>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-bordered">
                        <thead class="thead-dark text-center">
                            <tr>
                                <th>ID</th>
                                <th>Nom</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for client in clients %}
                                <tr>
                                    <td>{{ client.id }}</td>
                                    <td>{{ client.nom }}</td>
                                    <td>
                                        <a href="{{ path('app_client_show', {'id': client.id}) }}" class="btn btn-info btn-sm">Show</a>
                                        <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3" class="text-center">No records found</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    <div class="text-center mt-3">
                        <a href="{{ path('app_client_new') }}" class="btn btn-success">Create New</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
