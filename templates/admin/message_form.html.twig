{# templates/admin/message_form.html.twig #}
{% extends 'admin/base_admin.html.twig' %}

{% block title %}Send Message - Ticket #{{ ticket.ticketId }}{% endblock %}

{% block body %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                Send Message to {{ recipient.prenom }} {{ recipient.nom }}
            </h6>
        </div>
        <div class="card-body">
            <form method="post" action="{{ path('admin_send_message', {'id': ticket.ticketId}) }}">
                <div class="form-group">
                    <label for="message_content">Message</label>
                    <textarea class="form-control" id="message_content" name="message_content" rows="5" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Send Message</button>
                <a href="{{ path('admin_ticket_show', {'id': ticket.ticketId}) }}" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
{% endblock %}