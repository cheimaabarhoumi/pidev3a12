{% extends 'admin/base.html.twig' %}

{% block title %}Nouvelle Clause{% endblock %}
{% block page_title %}Clauses{% endblock %}
{% block page_heading %}Ajouter une Clause{% endblock %}

{% block body %}
<div class="card">
  <div class="card-header">
    <h5>➕ Nouvelle Clause pour le contrat {{ contratId }}</h5>
  </div>
  <div class="card-body">
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
      {{ form_widget(form) }}
      <div class="mt-3">
        <button class="btn btn-success">Créer la clause</button>
        <a href="{{ path('admin_clause_contrat_index', {'contratId': contratId}) }}" class="btn btn-secondary">
          ← Retour aux clauses
        </a>
      </div>
    {{ form_end(form) }}
  </div>
</div>
{% endblock %}
