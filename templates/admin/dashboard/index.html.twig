{% extends 'admin/base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block page_title %}Dashboard{% endblock %}
{% block page_heading %}Dashboard Overview{% endblock %}

{% block body %}
<div class="row">
    <div class="col-xl-3 col-sm-6 mb-4">
        <div class="card">
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-8">
                        <div class="numbers">
                            <p class="text-sm mb-0 text-capitalize font-weight-bold">Total Contrats</p>
                            <h5 class="font-weight-bolder mb-0">
                                {{ contracts_count ?? 0 }}
                            </h5>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                            <i class="fas fa-file-contract text-lg opacity-10" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6 mb-4">
        <div class="card">
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-8">
                        <div class="numbers">
                            <p class="text-sm mb-0 text-capitalize font-weight-bold">Contrats Actifs</p>
                            <h5 class="font-weight-bolder mb-0">
                                {{ active_contracts ?? 0 }}
                            </h5>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <div class="icon icon-shape bg-gradient-success shadow text-center border-radius-md">
                            <i class="fas fa-check text-lg opacity-10" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6 mb-4">
        <div class="card">
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-8">
                        <div class="numbers">
                            <p class="text-sm mb-0 text-capitalize font-weight-bold">Total Clients</p>
                            <h5 class="font-weight-bolder mb-0">
                                {{ clients_count ?? 0 }}
                            </h5>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <div class="icon icon-shape bg-gradient-info shadow text-center border-radius-md">
                            <i class="fas fa-users text-lg opacity-10" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6 mb-4">
        <div class="card">
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-8">
                        <div class="numbers">
                            <p class="text-sm mb-0 text-capitalize font-weight-bold">Montant Total</p>
                            <h5 class="font-weight-bolder mb-0">
                                {{ total_amount|number_format(2, ',', ' ') }} ‚Ç¨
                            </h5>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <div class="icon icon-shape bg-gradient-warning shadow text-center border-radius-md">
                            <i class="fas fa-euro-sign text-lg opacity-10" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{# Search Form #}
<div class="row mb-4">
    <div class="col-12">
        <form method="get" class="input-group">
            <input type="text" name="q" class="form-control" placeholder="Rechercher un contrat" value="{{ search_term }}">
            <button type="submit" class="btn btn-primary">Rechercher</button>
        </form>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header pb-0">
                <div class="d-flex justify-content-between align-items-center">
                    <h6>Contrats R√©cents</h6>
                    <a href="{{ path('admin_contrat_index') }}" class="btn btn-primary btn-sm mb-0">
                        <i class="fas fa-list"></i> Voir tous les contrats
                    </a>
                </div>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
                <div class="table-responsive p-0">
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">R√©f√©rence</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Intitul√©</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Date D√©but</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Montant</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Statut</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Clauses</th>
                                <th class="text-secondary opacity-7"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for contrat in recent_contracts %}
                            <tr>
                                <td>
                                    <div class="d-flex px-2 py-1">
                                        <div class="d-flex flex-column justify-content-center">
                                            <h6 class="mb-0 text-sm">{{ contrat.reference }}</h6>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <p class="text-sm font-weight-bold mb-0">{{ contrat.intitule }}</p>
                                </td>
                                <td class="align-middle text-center text-sm">
                                    <span class="text-secondary text-xs font-weight-bold">{{ contrat.dateDebut|date('d/m/Y') }}</span>
                                </td>
                                <td class="align-middle text-center text-sm">
                                    <span class="text-secondary text-xs font-weight-bold">{{ contrat.montant|number_format(2, ',', ' ') }} ‚Ç¨</span>
                                </td>
                                <td class="align-middle text-center text-sm">
                                    <span class="badge badge-sm bg-gradient-{{ contrat.statut == 'Actif' ? 'success' : (contrat.statut == 'En attente' ? 'warning' : 'danger') }}">{{ contrat.statut }}</span>
                                </td>
                                <td class="align-middle text-center text-sm">
                                    <a href="{{ path('app_clause_contrat_index', {'contratId': contrat.idContrat}) }}" class="btn btn-info btn-sm" title="G√©rer les clauses">
                                        <i class="fas fa-file-contract"></i> {{ contrat.clauses|length }}
                                    </a>
                                </td>
                                <td class="align-middle">
                                    <a href="{{ path('admin_contrat_show', {'id': contrat.idContrat}) }}" class="btn btn-info btn-sm" title="Voir">
                                        <i class="fas fa-eye"></i> üëÅÔ∏è Voir
                                    </a>
                                    <a href="{{ path('admin_contrat_edit', {'id': contrat.idContrat}) }}" class="btn btn-warning btn-sm" title="Modifier">
                                        <i class="fas fa-edit"></i> üìù Modifier
                                    </a>
                                    {{ include('admin/contrat/_delete_form.html.twig', {'contrat': contrat}) }}
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="7" class="text-center">Aucun contrat trouv√©</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 