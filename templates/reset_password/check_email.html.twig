{% extends 'base.html.twig' %}

{% block title %}Check your email{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h1 class="h3 mb-3 font-weight-normal">Check your email</h1>
                </div>
                <div class="card-body">
                    <p>
                        If an account matching your email exists, then an email was just sent that contains a link that you can use to reset your password.
                        This link will expire in {{ tokenLifetime|date('g') }} hour(s).
                    </p>
                    <p>
                        If you don't receive an email please check your spam folder or
                        <a href="{{ path('app_forgot_password_request') }}">try again</a>.
                    </p>

                    <div class="mt-3">
                        <a href="{{ path('app_login') }}" class="btn btn-link">
                            <i class="fas fa-arrow-left"></i> Back to login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 